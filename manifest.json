{
	"commonFields": {
		"name": "MafiaScum Modtools",
		"description": "Aid in the playing and hosting of games on MafiaScum",
		"version": "1.0.1",
		"icons": {
			"128": "/images/logo-128.png",
			"512": "/images/logo-512.png"
		},
		"content_scripts": [
			{
				"matches": ["https://forum.mafiascum.net/*"],
				"js": ["main.js"],
				"css": ["styling.css"]
			}
		]
	},
	"v2": {
		"manifest_version": 2,
		"background": {
			"scripts": ["background.js"],
			"persistent": false
		},
		"web_accessible_resources": ["images/*"],
		"permissions": [
			"storage",
			"unlimitedStorage",
			"https://forum.mafiascum.net/*"
		],
		"browser_action": {
			"default_popup": "popup.html",
			"default_icon": {
				"128": "/images/logo-128.png",
				"512": "/images/logo-512.png"
			}
		}
	},
	"v3": {
		"manifest_version": 3,
		"background": {
			"service_worker": "background.js"
		},
		"host_permissions": ["https://forum.mafiascum.net/*"],
		"web_accessible_resources": [
			{
				"resources": ["templates/*", "images/*"],
				"matches": ["https://forum.mafiascum.net/*"]
			}
		],
		"permissions": ["storage"],
		"action": {
			"default_popup": "popup.html",
			"default_icon": {
				"128": "/images/logo-128.png",
				"512": "/images/logo-512.png"
			}
		}
	}
}
